generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Manufacturer {
    id                     String    @id @default(uuid())
    email                  String    @unique
    name                   String?
    website                String?
    role                   String?
    category               String?
    country                String?
    state                  String?
    city                   String?
    address                String?
    verificationCode       String?
    verificationCodeExpiry DateTime?
    phoneNumber            String?
    password               String?
    verified               Boolean   @default(false)
    createdAt              DateTime  @default(now())
    updatedAt              DateTime  @updatedAt
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    name      String?
    verified  Boolean  @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
